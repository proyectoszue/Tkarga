<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="assets_frontend" inherit_id="web.assets_frontend">
            <xpath expr="." position="inside">
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"/>
                <link rel="stylesheet" href="/zue_payroll_self_management_portal/static/src/css/main.css"/>
                <script type="text/javascript" src="/zue_payroll_self_management_portal/static/src/js/application_permit.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            </xpath>
        </template>
        <template id="application_permit" name="Solicitud de permisos">
            <!-- <link rel="stylesheet" type="text/scss" href="/zue_payroll_self_management_portal/static/src/css/main.css"/> -->
            <t t-call="website.layout">
                <div class="oe_structure">
                    <main class="container">
                        <h1 class="center title">
                            <strong>Solicitud de Permisos</strong>
                        </h1>
                        <form class="form-application-permit" action='/zue_payroll_self_management_portal/save_permit_application' method="POST">
                            <section class="control-edit">
                                <!-- <h2>Información Basica</h2> -->
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="permit_date" class="form-label">Fecha de la solicitud</label>
                                        <input type="date" class="form-control" id="permit_date" placeholder="Fecha Solicitud" name="permit_date" />
                                    </div>
                                     <div class="form-group col-md-4">
                                        <label for="reason" class="form-label">Tipo de Solicitud</label>
                                        <select class="form-select" id="reason" name="reason" placeholder="Tipo de Solicitud">
                                            <option value="personal">Diligencia Personal</option>
                                            <option value="med_general">Cita médico general</option>
                                            <option value="med_laboral">Cita médico laboral</option>
                                            <option value="other">Otros</option>
                                        </select>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="severalDays" /> 
                                        <label class="form-check-label" for="severalDays"> Permiso solicitado superior a un dia. </label>
                                    </div>
                                </div>
                                 <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="email" class="form-label">Dias solicitados</label>
                                        <input type="text" id="permit_days" name="permit_days"  placeholder="Dias solicitados"  class="form-control" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="initial_hour" class="form-label">Hora de Salida</label>
                                        <input type="time" class="form-control" id="initial_hour" placeholder="Hora de Salida" name="initial_hour" />    
                                        <input type="hidden" id="initial_date" name="initial_date" />
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label for="final_hour" class="form-label">Hora de Llegada</label>
                                        <input type="time" class="form-control" id="final_hour" placeholder="Hora de Llegada" name="final_hour" />
                                        <input type="hidden" id="final_date" name="final_date" />
                                    </div>
                                </div>
                                
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label for="observation">Observaciones</label>
                                        <textarea class="observation form-control" placeholder="Observaciones adicionales" name="observation" id="observation" ></textarea>
                                    </div>
                                </div>
                                <div class="form-row justify-content-center">
                                    <div class="form-group col-md-12">
                                        <input type="submit" class="btn btn-outline-success btn-lg btn-block" id="SaveData" value="Solicitar"/>
                                    </div>
                                </div>
                            </section>
                        </form>   
                    </main>

                </div>
            </t>
        </template>
    </data>
</odoo>