<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window"  id="mntc_workorder_report_rh_action">
            <field name="name">Informe de Recurso Humano para la orden de trabajo </field>
            <field name="res_model">mntc.workorder.report.rh</field>
            <field name="view_mode">pivot</field>
		</record>

        <record id="mntc_workorder_report_rh_pivot" model="ir.ui.view">
            <field name="name">mntc.workorder.report.rh.pivot</field>
            <field name="model">mntc.workorder.report.rh</field>
            <field name="arch" type="xml">
                <pivot string="Pivot">
                    <field name="tiempo_gastado_rrhh" type="measure" widget="float_time"/>
                    <field name="tiempo_estimado_ts" type="measure" widget="float_time"/>
                    <field name="tiempo_empleado_ot" type="measure" widget="float_time"/>
                    <field name="tiempo_estimado_ot" type="measure" widget="float_time"/>
                    <field name="duracion_real_ot" type="measure" widget="float_time"/>  
                    <field name="tiempo_estimado_rrhh" type="measure" widget="float_time"/> 
                    <field name="total_horas_hombre_ts" type="measure" widget="float_time"/>                   
                </pivot>
            </field>
		</record>
        
  </data>
</odoo>