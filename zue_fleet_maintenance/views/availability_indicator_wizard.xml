<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <data>

        <record id="availability_indicator_wizard_view_form" model="ir.ui.view">
            <field name="name">availability.indicator.wizard.view.form</field>
            <field name="model">availability.indicator.wizard</field>
            <field name="arch" type="xml">
                <form string="Payslip Lines">
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="hours_24"/>
                        <field name="start_hour" attrs="{'invisible': [('hours_24', '=', True)], 'required': [('hours_24', '=', False)]}"/>
                        <field name="end_hour" attrs="{'invisible': [('hours_24', '=', True)], 'required': [('hours_24', '=', False)]}"/>
                        <field name="all_services"/>
                        <field name="service_ids" attrs="{'invisible': [('all_services', '=', True)], 'required': [('all_services', '=', False)]}"/>
                    </group>
                    <footer>
                        <button name="print_availability_report" string="Ver Informe" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" class="oe_link" string="Cancelar" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_availability_indicator_wizard" model="ir.actions.act_window">
            <field name="name">Informe de Disponibilidad</field>
            <field name="res_model">availability.indicator.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="availability_indicator_wizard_view_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>