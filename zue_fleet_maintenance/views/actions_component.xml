<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_mntc_action_taken">
            <field name="name">Action Taken</field>
            <field name="res_model">mntc.action.taken</field>
            <field name="view_mode">tree</field>
        </record>

         <record model="ir.ui.view" id="zue_fleet_maintenance.list_action_mntc_action_taken">
			    <field name="name">zue list mntc action taken</field>
			    <field name="model">mntc.action.taken</field>
			    <field name="arch" type="xml">
				<tree editable="bottom">
					<field name="name"/>                
					<field name="code"/> 
					<field name="description"/>            
				</tree>
			</field>
		</record>
        
        <record model="ir.actions.act_window" id="action_mntc_component">
            <field name="name">Component</field>
            <field name="res_model">mntc.component</field>
            <field name="view_mode">tree</field>
        </record>

        <record model="ir.ui.view" id="zue_fleet_maintenance.list_action_mntc_component">
			    <field name="name">zue list mntc component</field>
			    <field name="model">mntc.component</field>
			    <field name="arch" type="xml">
				<tree editable="bottom">
					<field name="name"/>                
					<field name="code"/> 
				</tree>
			</field>
		</record>
    </data>
</odoo>