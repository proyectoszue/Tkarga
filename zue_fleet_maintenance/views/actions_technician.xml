<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_mntc_technician">
            <field name="name">Technician</field>
            <field name="res_model">mntc.technician</field>
            <field name="view_mode">tree</field>
        </record>

        <record model="ir.ui.view" id="zue_fleet_maintenance.list_action_mntc_technician">
            <field name="name">zue list mntc technician</field>
            <field name="model">mntc.technician</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" invisible="1"/>
                    <field name="employee_supplier"/>
                    <field name="employee_id" attrs="{'invisible': [('employee_supplier','==', 'emp_sup_2')]}"/>
                    <field name="supplier_id" attrs="{'invisible': [('employee_supplier','==', 'emp_sup_1')]}"/>
                    <field name="garage_id" widget="many2many_tags"/>
                    <field name="workforce_type_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="zue_fleet_maintenance.search_action_mntc_technician">
            <field name="name">zue search mntc technician</field>
            <field name="model">mntc.technician</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id"/>
                    <field name="supplier_id"/>                    
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_mntc_garage">
            <field name="name">Garage</field>
            <field name="res_model">mntc.garage</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="zue_fleet_maintenance.list_action_mntc_garage">
            <field name="name">zue list mntc garage</field>
            <field name="model">mntc.garage</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="branch_id"/>
                    <field name="stock_location_id"/>
                    <field name="time_value"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="zue_fleet_maintenance.form_action_mntc_garage">
            <field name="name">zue form mntc garage</field>
            <field name="model">mntc.garage</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Taller">
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="branch_id"/>
                            </group>
                            <group>
                                <field name="code"/>
                                <field name="stock_location_id"/>
                            </group>
                        </group>
                        <group col="2">
                            <field name="time_value"/>
                        </group>
                        <group>
                            <field name="location">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="location_code"/>
                                    <field name="location_type"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>