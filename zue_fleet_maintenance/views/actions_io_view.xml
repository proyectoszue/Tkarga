<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window"  id="mntc_io_action">
            <field name="name">Input/Output</field>
            <field name="res_model">mntc.io</field>
            <field name="view_mode">tree,form,calendar,dashboard</field>
		</record>

        <record model="ir.ui.view" id="zue_fleet_maintenance.list_mntc_io_action">
            <field name="name">zue list mntc io</field>
            <field name="model">mntc.io</field>
            <field name="arch" type="xml">
                  <tree string="I/O">
                        <field name="number"/>
                        <field name="location_type"/>
                        <field name="vehicle_id"/>
                        <field name="movil_nro"/>
                        <field name="odometer"/>
                        <field name="scheduled_incoming_date"/>
                        <field name="incoming_date"/>
                        <field name="scheduled_outgoing_date"/>
                        <field name="outgoing_date"/>
                        <field name="requester_id"/>
                        <field name="real_time" widget="float_time" sum="Total real time"/>                        
                        <field name="estimated_time" widget="float_time" sum="Total estimated time"/>
                        <field name="counter_request" sum="Total Request"/>
                        <field name="counter_workorder" sum="Total Work order"/>
                        <field name="service_type_id" invisible="1" />
                        <field name="state"/>
                  </tree> 
            </field>
        </record>
        
        <record model="ir.ui.view" id="zue_fleet_maintenance.form_action_mntc_io">
            <field name="name">zue form mntc io</field>
            <field name="model">mntc.io</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="new_request" type="object" string="New Request" attrs="{'invisible':[('state','not in', ['in'])]}"/>
                        <button name="output" type="object" string="Output" attrs="{'invisible':[('state','not in', ['in'])]}"/>
                        <button name="vehicle_income" type="object" string="Vehicle income" attrs="{'invisible':[('state','not in', ['programmed'])]}"/>
                        <button name="mntc_io_canceled" type="object" string="Cancel" attrs="{'invisible':[('state','not in', ['programmed'])]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet string="Input/Output">
                        <h1>
                            <field name="number" />
                        </h1>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button name="return_action_to_open"
                                    type="object" 
                                    class="oe_stat_button" style="width: 180px !important;" 
                                    icon="fa-list"
                                    attrs="{'invisible': [('counter_request', '=', 0)]}" 
                                    >
                                    <field name="counter_request" widget="statinfo"/>
                            </button>
                            <button name="return_action_to_open_workorder"
                                    class="oe_stat_button"
                                    icon="fa-gear"
                                    attrs="{'invisible': [('counter_workorder', '=', 0)]}"
                                    type="object"
                                    style="width: 220px !important;" >
                                    <field name="counter_workorder" widget="statinfo"/>
                            </button>
                        </div>
                        <group string="Input/Output">
                            <group>
                                <field name="movil_nro"/>
                                <field name="vehicle_id"/>
                                <field name="odometer" />
                            </group>
                            <group>
                                <field name="garage_id"/>
                                <field name="location_type" />
                            </group>
                        </group>
                        <group>
                            <button name="check_odometer" type="object" string="Check odometer" class="oe_inline"/>          
                        </group>
                        <group>      
                            <group>
                                <field name="requester_id"/>
                            </group>
                            <group>
                                <field name="work_phone"/>
                            </group>
                        </group>

                        <group>
                            <field name="real_time" widget="float_time"/>
                            <field name="estimated_time" widget="float_time"/>
                        </group>
                        <group>
                            <group>
                                <field name="scheduled_incoming_date" attrs="{'required':[('state','=','programmed')]}"/>
                                <field name="incoming_date"/>
                            </group>
                            <group>
                                <field name="scheduled_outgoing_date" attrs="{'required':[('state','=','programmed')]}"/>
                                <field name="outgoing_date" attrs="{'required':[('state','=','out')]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="mntc_request_ids" invisible="1"/>
                            <field name="workorder_ids" widget="many2many_tags" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="mntc_io_search" model="ir.ui.view">
            <field name="name">mntc.io.search</field>
            <field name="model">mntc.io</field>
            <field name="arch" type="xml">
                <search string="asset">
                    <field name="number"/>
                    <field name="movil_nro" filter_domain="[('movil_nro','ilike',self)]" string="Movil"/>
                    <field name="vehicle_id" filter_domain="[('vehicle_id','ilike',self)]" string="Vehicle"/>
                    <field name="vehicle_id" filter_domain="[('vehicle_id','ilike',self)]" string="Vehicle"/>
                    <group expand="1" string="groups">
                        <filter string="Garage" name="garage_id" context="{'group_by':'garage_id'}"/>
                        <filter string="Vehicle" name="vehicle_id" context="{'group_by':'vehicle_id'}"/>
                        <filter string="Movil" name="movil_nro" context="{'group_by':'movil_nro'}"/>
                        <filter string="Location type" name="location_type" context="{'group_by':'location_type'}"/>
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                        <filter string="Service" name="service_type_id" context="{'group_by':'service_type_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="mntc_io_graph" model="ir.ui.view">
            <field name="name">mntc.io.graph</field>
            <field name="model">mntc.io</field>
            <field name="arch" type="xml">
                <graph string="Graph">
                    <!-- <field name="estimated_time" type="measure" widget="float_time"/>
                    <field name="spent_time" type="measure" widget="float_time"/> -->
                </graph>
            </field>
		</record>

        <record id="mntc_io_pivot" model="ir.ui.view">
            <field name="name">mntc.io.pivot</field>
            <field name="model">mntc.io</field>
            <field name="arch" type="xml">
                <pivot string="Pivot">
                    <!-- <field name="estimated_time" type="measure" widget="float_time"/>
                    <field name="spent_time" type="measure" widget="float_time"/> -->
                </pivot>
            </field>
		</record>

        <record id="mntc_io_dashboard" model="ir.ui.view">
            <field name="name">mntc.io.dashboard</field>
            <field name="model">mntc.io</field>
            <field name="arch" type="xml">
                <dashboard>
                    <view type="pivot" ref="zue_fleet_maintenance.mntc_io_pivot"/>
                    <view type="graph" ref="zue_fleet_maintenance.mntc_io_graph"/>
                </dashboard>
            </field>
		</record>

        <record  model="ir.ui.view" id="mntc_io_calendar">
            <field name="name">mntc.io.calendar</field>
            <field name="model">mntc.io</field>
            <field name="arch" type="xml">
                <calendar date_start="scheduled_incoming_date">
                    <!-- <field name="workorder_id" />
                    <field name="activity_id"  /> -->
                </calendar>
            </field>
        </record>

    </data>
</odoo>