<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_mntc_detection_methods">
            <field name="name">Detection Methods</field>
            <field name="res_model">mntc.detection.methods</field>
            <field name="view_mode">tree</field>
        </record>

        <record model="ir.ui.view" id="zue_fleet_maintenance.list_mntc_detection_methods">
            <field name="name">zue list mntc detection methods</field>
            <field name="model">mntc.detection.methods</field>
            <field name="arch" type="xml">
			    <tree editable="bottom">
					<field name="name"/>                
					<field name="code"/> 
					<field name="description"/>                
				</tree>
			</field>
		</record> 
    </data>
</odoo>