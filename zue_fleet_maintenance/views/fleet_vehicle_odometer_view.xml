<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model='ir.ui.view' id='zue_fleet_vehicle_odometer'>
            <field name="name">zue.fleet.vehicle.odometer</field>
            <field name="model">fleet.vehicle.odometer</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_odometer_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='unit']" position="after">
                    <field name="source"/>
                </xpath>
            </field>
        </record>
        <record model='ir.ui.view' id='zue_fleet_vehicle_odometer_tree'>
            <field name="name">zue.fleet.vehicle.odometer.tree</field>
            <field name="model">fleet.vehicle.odometer</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_odometer_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='unit']" position="after">
                    <field name="source"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>