<odoo>
	<data>
		<record id="view_zue_fleet_maintenance_form_product_template" model="ir.ui.view">
			<field name="name">fleet.maintenance.zue.product.template.form.inherit</field>
			<field name="model">product.template</field>
			<field name="priority">20</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
				<!-- <xpath expr="//form//sheet" position="before">
                    <header>
                        <button name="create_default_code" type="object" string="Crear referencia interna" attrs="{'invisible': [['esRepuesto','=',False]]}"/>
                    </header>
                </xpath> -->
				<xpath expr="//field[@name='sale_ok']" position="before">
					<field name="esRepuesto"/>
					<label for="esRepuesto"/>
					<br/>
				</xpath>
				<xpath expr="//field[@name='uom_id']" position="after">
					<field name="codigo_fabrica"/>
				</xpath>
				<xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">					
					<page string="Referencia" attrs="{'invisible': [['esRepuesto','=',False]]}">
						<group name="reference">
							<field name="family_id" attrs="{'required': [('esRepuesto', '=', True)]}"/>
							<field name="brand_id" attrs="{'required': [('esRepuesto', '=', True)]}"/>
							<field name="vehiculo_linea_id" attrs="{'required': [('esRepuesto', '=', True)]}"/>
							<field name="system_id" attrs="{'required': [('esRepuesto', '=', True)]}"/>
							<field name="rotation_type"/>
							<!-- <field name="type_of_purchase"/>
							<field name="rotation_type"/> -->
							<field name="sequence_number" invisible='1'/>
							<field name="help_categ" invisible='1'/>
						</group>
					</page>					
				</xpath>
			</field>
		</record>

		<record id="view_stock_picking_form" model="ir.ui.view">
            <field name="name">zue.product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="family_id"/>
                    <field name="brand_id"/>
                    <field name="vehiculo_linea_id"/>
                    <field name="codigo_fabrica"/>
					<field name="rotation_type"/>
                </xpath>
            </field>
        </record>

		<record id="view_zue_fleet_maintenance_form_stock_warehouse" model="ir.ui.view">
			<field name="name">fleet.maintenance.zue.stock.warehouse.form.inherit</field>
			<field name="model">stock.warehouse</field>
			<field name="priority">20</field>
			<field name="inherit_id" ref="stock.view_warehouse"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='company_id']" position="after">
					<field name="store_id" required="1"/>
				</xpath>
			</field>
		</record>

		<record id="view_zue_fleet_maintenance_form_stock_picking" model="ir.ui.view">
			<field name="name">fleet.maintenance.zue.stock.picking.form.inherit</field>
			<field name="model">stock.picking</field>
			<field name="priority">20</field>
			<field name="inherit_id" ref="stock.view_picking_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='origin']" position="after">
					<field name="fleet_id"/>
					<field name="workorder_id" attrs="{'invisible': [('workorder_id', '=', False)]}"/>
				</xpath>
			</field>
		</record>


		<record id="view_zue_fleet_maintenance_form_purchase_order" model="ir.ui.view">
			<field name="name">fleet.maintenance.zue.purchase.order.form.inherit</field>
			<field name="model">purchase.order</field>
			<field name="priority">20</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
					<field name="branch_id"/>
					<xpath expr="//field[@name='picking_type_id']" position="move"/>
				</xpath>
				<xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='order_line']/tree[1]/field[@name='name']" position="after">
                    <field name="familia"/>
                    <field name="marca"/>
                    <field name="linea"/>
                    <field name="sistema"/>
                </xpath>
			</field>
		</record>
	</data>
</odoo>