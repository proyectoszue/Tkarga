<odoo>
    <data>
        <record model="ir.actions.act_window"  id="mntc_routines_action">
				<field name="name">Routines</field>
				<field name="res_model">mntc.routines</field>
				<field name="view_mode">tree,form</field>
		</record>

		<record model="ir.ui.view" id="zue_fleet_maintenance.list_mntc_routines_action">
			<field name="name">zue list mntc routines</field>
			<field name="model">mntc.routines</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>                
					<field name="trigger_type"/>           
					<field name="trigger_qty"/>           
					<field name="estimated_time" widget="float_time"/>           
					<field name="activity_ids"/>           
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="zue_fleet_maintenance.form_mntc_routines_action">
			<field name="name">zue form mntc routines</field>
			<field name="model">mntc.routines</field>
			<field name="arch" type="xml">
				<form>
                    <sheet string="Rutinas">
                        <group>
							<group>
								<field name="name"/>
								<field name="trigger_qty"/> 
							</group>  
							<group> 
								<field name="trigger_type"/>
								<field name="estimated_time" widget="float_time"/>
							</group>
							<field name="activity_ids"/>
							<field name="description"/>
							<field name="state"/>
                        </group>
                    </sheet>
                </form>
			</field>
		</record>

		<record model="ir.actions.act_window"  id="mntc_activity_action">
				<field name="name">Tareas</field>
				<field name="res_model">mntc.activity</field>
				<field name="view_mode">tree,form</field>
		</record>

		<record model="ir.ui.view" id="zue_fleet_maintenance.list_mntc_activity_action">
			<field name="name">zue list mntc activity</field>
			<field name="model">mntc.activity</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>                
					<field name="sequence"/>           
					<field name="system_id"/>           
					<field name="estimated_time" widget="float_time"/>           
					<field name="description"/>           
					<field name="state"/>           
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="zue_fleet_maintenance.form_mntc_activity_action">
			<field name="name">zue form mntc activity</field>
			<field name="model">mntc.activity</field>
			<field name="arch" type="xml">
				<form>
                    <sheet string="Tarea">
                        <group>
                            <field name="name"/>
                        </group>
						<group> 
							<field name="description"/>     
						</group>
						<group>	
							<group>					
								<field name="sequence"/>  
								<field name="system_id"/>  
								<field name="required_technicians"/>                            
							</group>
							<group>	                            
								<field name="state"/>
								<label for="estimated_time"/>
								<div>
									<field name="estimated_time" class="oe_inline" widget="float_time"/> Horas
								</div>  
							</group>   
						</group>
						<notebook>
							<page name="repuestos" string="Repuestos">
								<field name="repuesto"/>
							</page>
							<page name="Servicios" string="Servicios">
								<field name="servicio"/>
							</page>
							<page name="inspecciones" string="Inspecciones">
								<field name="inspections_ids"/>
							</page>
							<page name="rh" string="Recurso humano">
								<field name="disciplina" widget="one2many"> 
                                    <tree editable="bottom">
                                        <field name="workforce_type_id"/>
										<field name="estimated_time" widget="float_time"/>
                                    </tree>
                                </field>
							</page>
						</notebook>
						
                    </sheet>
                </form>
			</field>
		</record>


		<record model="ir.actions.act_window"  id="mntc_inspections_action">
				<field name="name">Inspections</field>
				<field name="res_model">mntc.inspections</field>
				<field name="view_mode">tree,form</field>
		</record>

        <record model="ir.ui.view" id="zue_fleet_maintenance.list_mntc_inspections_action">
            <field name="name">zue list mntc inspections</field>
            <field name="model">mntc.inspections</field>
            <field name="arch" type="xml">
                <tree string="mntc inspections tree">
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="inspection_type"/>
                    <field name="condition"/>
                    <field name="min_value"/>
                    <field name="max_value"/>
                    <field name="uom_id"/>
                    <field name="inspection_values_ids"/>
                </tree>
            </field>
        </record>

		<record model="ir.ui.view" id="zue_fleet_maintenance.form_mntc_inspections_action">
            <field name="name">zue form mntc inspections</field>
            <field name="model">mntc.inspections</field>
            <field name="arch" type="xml">
                <form string="Mntc inspections form">
                    <sheet string="Inspections">
						<group>
							<field name="name"/>
							<group>
								<field name="sequence"/>
							</group>
							<group>
								<field name="inspection_type"/>
							</group>
						</group>
						<group name="qualitative" string="Respuestas" attrs="{'invisible': [('inspection_type', '!=', 'qualitative')]}">
							<field name="inspection_values_ids" nolabel="1" attrs="{'required': [('inspection_type','=','qualitative')]}">
								<tree string="Question value" editable="bottom">
									<field name="name" />
									<field name="ok" />
								</tree>
							</field>
						</group>
						<group name="quantitative" string="Respuestas" attrs="{'invisible': [('inspection_type', '!=', 'quantitative')]}">
							<div align="center" >
								<span name="quantitative-data">
									<span name="quantitative-condition" >
										<field name="condition" class="oe_inline" nolabel="1" attrs="{'required': [('inspection_type', '=', 'quantitative')]}" />
									</span>
									<span name="quantitative-interval" >
										<field name="min_value" class="oe_inline" nolabel="1" attrs="{'required': [('inspection_type','=', 'quantitative')]}" />
										<span> - </span>
										<field name="max_value" class="oe_inline" nolabel="1" attrs="{'required': [('inspection_type', '=', 'quantitative'),('condition', '=', 'between')], 'invisible':[('condition', '!=', 'between')] }" />
									</span>
									<span name="quantitative-uom" >
										<field name="uom_id" class="oe_inline" nolabel="1" attrs="{'required': [('inspection_type', '=', 'quantitative')]}" />
									</span>
								</span>
							</div>
						</group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
