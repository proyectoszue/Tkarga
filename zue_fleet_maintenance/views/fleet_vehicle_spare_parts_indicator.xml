<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_mntc_vehicle_spare_parts_wizard_tree">
            <field name="name">mntc.vehicle.spare.parts.wizard.tree</field>
            <field name="model">mntc.vehicle.spare.parts.wizard</field>
            <field name="arch" type="xml">
                <tree string="Seguimiento vehículos en espera de partes" editable="bottom">
                    <field name="referencia"/>
                    <field name="producto" readonly="1"/>
<!--                    <field name="scheduled_date" readonly="1"/>-->
<!--                    <field name="doc_origen" readonly="1"/>-->
<!--                    <field name="movil_nro" readonly="1"/>-->
<!--                    <field name="placa_nro" readonly="1"/>-->
                    <field name="assigned_company"  readonly="1"/>
                    <field name="initial_demand" readonly="1"/>
                    <field name="reserved_availability" readonly="1"/>
                    <field name="qty_done" readonly="1"/>
                    <field name="a_mano" readonly="1"/>
                    <field name="state" readonly="1"/>
                    <field name="AMTUR_BOGOExistencias" readonly="1"/>
                    <field name="AMTUR_CARTExistencias" readonly="1"/>
                    <field name="AMTUR_GALBExistencias" readonly="1"/>
                    <field name="AMTUR_GFONExistencias" readonly="1"/>
                    <field name="AMTUR_GRIOExistencias" readonly="1"/>
                    <field name="AMTUR_MONTExistencias" readonly="1"/>
                    <field name="GEAT_BOGOExistencias" readonly="1"/>
                    <field name="GEAT_CARTExistencias" readonly="1"/>
                    <field name="GEAT_GALBExistencias" readonly="1"/>
                    <field name="GEAT_GFONExistencias" readonly="1"/>
                    <field name="GEAT_GRIOExistencias" readonly="1"/>
                    <field name="GEAT_MONTExistencias" readonly="1"/>
                    <field name="UT_BOGOExistencias" readonly="1"/>
                    <field name="UT_CARTExistencias" readonly="1"/>
                    <field name="UT_GALBExistencias" readonly="1"/>
                    <field name="UT_GFONExistencias" readonly="1"/>
                    <field name="UT_GRIOExistencias" readonly="1"/>
                    <field name="UT_MONTExistencias" readonly="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_mntc_vehicle_spare_parts_wizard_form">
            <field name="name">mntc.vehicle.spare.parts.wizard.form</field>
            <field name="model">mntc.vehicle.spare.parts.wizard</field>
            <field name="arch" type="xml">
            <form>
                <sheet>
                    <separator/>
                    <group>
                        <field name="referencia" readonly="1"/>
                        <field name="producto" readonly="1"/>
<!--                    <field name="scheduled_date" readonly="1"/>-->
<!--                    <field name="doc_origen" readonly="1"/>-->
<!--                    <field name="movil_nro" readonly="1"/>-->
<!--                    <field name="placa_nro" readonly="1"/>-->
                        <field name="assigned_company"  readonly="1"/>
                        <field name="initial_demand" readonly="1"/>
                        <field name="reserved_availability" readonly="1"/>
                        <field name="qty_done" readonly="1"/>
                        <field name="a_mano" readonly="1"/>
                        <field name="state" readonly="1"/>
                        <field name="AMTUR_BOGOExistencias" readonly="1"/>
                        <field name="AMTUR_CARTExistencias" readonly="1"/>
                        <field name="AMTUR_GALBExistencias" invisible="1"/>
                        <field name="AMTUR_GFONExistencias" invisible="1"/>
                        <field name="AMTUR_GRIOExistencias" invisible="1"/>
                        <field name="AMTUR_MONTExistencias" invisible="1"/>
                        <field name="GEAT_BOGOExistencias" readonly="1"/>
                        <field name="GEAT_CARTExistencias" readonly="1"/>
                        <field name="GEAT_GALBExistencias" invisible="1"/>
                        <field name="GEAT_GFONExistencias" invisible="1"/>
                        <field name="GEAT_GRIOExistencias" invisible="1"/>
                        <field name="GEAT_MONTExistencias" invisible="1"/>
                        <field name="UT_BOGOExistencias" readonly="1"/>
                        <field name="UT_CARTExistencias" readonly="1"/>
                        <field name="UT_GALBExistencias" invisible="1"/>
                        <field name="UT_GFONExistencias" invisible="1"/>
                        <field name="UT_GRIOExistencias" invisible="1"/>
                        <field name="UT_MONTExistencias" invisible="1"/>
                    </group>
                </sheet>
            </form>
            </field>
        </record>

        <record id="view_vehicle_spare_parts_indicator_form" model="ir.ui.view">
            <field name="name">mntc.vehicle.spare.parts.indicator.form</field>
            <field name="model">mntc.vehicle.spare.parts.indicator</field>
            <field name="arch" type="xml">
                <form string="Select test">
                    <form string="Seguimiento vehículos en espera">
                        <group>
                            <field name="company_id"/>
                        </group>
                        <footer>
                            <button name="export_excel" string="Generar Excel" type="object" class="oe_highlight"/>
                            <button name="open_program_wizard" string="Transferencia" type="object" class="oe_highlight" invisible="1"/>
                        </footer>
                    </form>
                </form>
            </field>
        </record>

        <record id="action_vehicle_spare_parts_indicator" model="ir.actions.act_window">
            <field name="name">Seguimiento vehículos en espera</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mntc.vehicle.spare.parts.indicator</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.actions.server" id="fleet_spare_wizard_act">
            <field name="name">Transferir</field>
            <field name="model_id" ref="model_mntc_vehicle_spare_parts_wizard"/>
            <field name="state">code</field>
            <field name="code">
                action = env['mntc.vehicle.spare.parts.wizard'].browse(env.context['active_ids']).transfer_fleet_spare()
            </field>
        </record>
    </data>
</odoo>
