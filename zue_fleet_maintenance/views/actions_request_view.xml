        <record id="mntc_request_gantt" model="ir.ui.view">
            <field name="name">mntc.request.gantt</field>
            <field name="model">mntc.request</field>
             <field name="arch" type="xml">
                <gantt date_start="request_date" date_stop="delivery_date" default_group_by="vehicle_id" />
             </field>
        </record> -->

        <record id="mntc_request_search" model="ir.ui.view">
            <field name="name">mntc.request.search</field>
            <field name="model">mntc.request</field>
            <field name="arch" type="xml">
                <search string="asset">
                    <field name="movil_nro" filter_domain="[('movil_nro','ilike',self)]" string="Movil"/>
                    <field name="vehicle_id" filter_domain="[('vehicle_id','ilike',self)]" string="Vehicle"/>
                    <field name="number" filter_domain="[('number','ilike',self)]" string="Number"/>
                    <field name="name" filter_domain="[('name','ilike',self)]" string="Name"/>
                    <group expand="1" string="groups">
                        <!-- <filter string="system_id" name="system_id" context="{'group_by':'system_id'}"/> -->
                        <filter string="Vehicle" name="vehicle_id" context="{'group_by':'vehicle_id'}"/>
                        <filter string="Request Date" name="request_date" context="{'group_by':'request_date'}"/>
                        <filter string="Priority" name="priority_id" context="{'group_by':'priority_id'}"/>
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                        <filter string="type of maintenance" name="type_mntc" context="{'group_by':'type_mntc'}"/>
                        <filter string="Garage" name="garage_id" context="{'group_by':'garage_id'}"/>
                        <filter string="Movil" name="movil_nro" context="{'group_by':'movil_nro'}"/>
                        <filter string="service type" name="service_type_id" context="{'group_by':'service_type_id'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>