<odoo>
    <data>
        <record model="ir.actions.act_window"  id="mntc_causes_action">
				<field name="name">Causes</field>
				<field name="res_model">mntc.causes</field>
				<field name="view_mode">tree</field>
		</record>
		
		<record model="ir.ui.view" id="zue_fleet_maintenance.list_mntc_causes_action">
			    <field name="name">zue list mntc causes</field>
			    <field name="model">mntc.causes</field>
			    <field name="arch" type="xml">
				<tree editable="bottom">
					<field name="name"/>                
					<field name="code"/> 
					<field name="description"/>           
				</tree>
			</field>
		</record>
    </data>
</odoo>