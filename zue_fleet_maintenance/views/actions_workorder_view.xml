<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="mntc_workorder_action">
            <field name="name">Work order</field>
            <field name="res_model">mntc.workorder</field>
            <field name="view_mode">tree,form,calendar,dashboard</field>
        </record>

        <record model="ir.ui.view" id="zue_fleet_maintenance.list_mntc_workorder_action">
            <field name="name">zue list mntc workorder</field>
            <field name="model">mntc.workorder</field>
            <field name="arch" type="xml">
                <tree string="mntc workorder tree" default_order='create_date desc' create="false">
                    <field name="number"/>
                    <field name="create_date"/>
                    <field name="vehicle_id"/>
                    <field name="movil_nro"/>
                    <field name="branch_id"/>
                    <field name="service_type_id"/>
                    <field name="type_mntc"/>
                    <field name="priority"/>
                    <field name="request_id"/>
                    <field name="garage_id"/>
                    <field name="location_id"/>
                    <field name="estimated_time" widget="float_time"/>
                    <field name="start_programmed_date"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="spent_time"  widget="float_time"/>
                    <field name="state"/>
                    <field name="odometer"/>
                    <field name="service_type_id" invisible='1'/>
                    <field name="in_charge" invisible='1'/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="mntc_workorder_form_view"> 
            <field name="name">mntc.workorder.form.view</field>
            <field name="model">mntc.workorder</field>
            <field name="arch" type="xml">
                <form string="Mntc workorder form" create="false">
                    <header>
                        <button name="mntc_workorder_programmed" type="object" string="To Program" attrs="{'invisible':  [('state','not in', ['planeacion'])]}"/>
                        <button name="mntc_workorder_pause" type="object" string="Pause" attrs="{'invisible':  [('state','not in', ['in_progress'])]}"/>
                        <button name="mntc_workorder_continue" type="object" string="Continue work order" attrs="{'invisible':  [('state','not in', ['stopped'])]}"/>
                        <button name="mntc_workorder_execution" type="object" string="Ejecución" attrs="{'invisible':  [('state','not in', ['programmed','stopped'])]}"/>
                        <button name="mntc_workorder_canceled" confirm="Are you sure to cancel the work order?" type="object" string="Canceled" attrs="{'invisible':  [('state','in', ['ended','canceled'])]}"/>
                        <button name="call_up_wizard" type="object" string="finish work order" attrs="{'invisible':  [('state','not in', ['in_progress'])]}"/>
                        <button name="unlock_spare_parts" type="object" string="Desbloquear Espera de Partes" attrs="{'invisible':  [('state','not in', ['waiting_parts'])]}"/>
                        <!-- <button class="oe_highlight" name="call_up_wizard" string="confirmation" type="object" /> -->
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet string="Workorder">
                        <div class="oe_button_box" name="button_box">
                                <button name="return_action_to_open" class="oe_stat_button" context="{'xml_id':'zue_fleet_maintenance.list_mntc_io_action'}"
                                        icon="fa-clock-o" attrs="{'invisible': [('counter_io', '=', 0)]}" type="object" 
                                        style="width: 220px !important;" >
                                    <field name="counter_io" widget="statinfo" string="Entrada/Salida"/>
                                </button>
                                <button name="return_action_to_open_stock_picking" class="oe_stat_button" context="{'xml_id':'zue_fleet_maintenance.list_mntc_workorder_action'}"
                                        icon="fa-clock-o" attrs="{'invisible': [('counter_stock_picking', '=', 0)]}" type="object" 
                                        style="width: 180px !important;" >
                                    <field name="counter_stock_picking" widget="statinfo" string="Órden de entrega"/>
                                </button>

                                <button name="return_action_to_open_purchase_order" class="oe_stat_button" context="{'xml_id':'purchase.purchase_order_tree'}"
                                        icon="fa-clock-o" attrs="{'invisible': [('counter_purchase_order', '=', 0)]}" type="object"
                                        style="width: 220px !important;" >
                                    <field name="counter_purchase_order" widget="statinfo" string="Solicitud de cotización"/>
                                </button> 
                                <!-- <button class="oe_inline oe_stat_button" type="object" name="generate_tasks" icon="fa-check"
                                        attrs="{'invisible':  [('state','not in', ['planeacion'])]}" string="Task generator"/>
                                <button class="oe_inline oe_stat_button" type="object" name="generate_program" icon="fa-calendar"
                                        attrs="{'invisible':  [('state','not in', ['planeacion'])]}" string="Generate program"/> -->
                            </div>
                        <group>
                            <div class="oe_title">
                                <h1>
                                    <field name="number" class="oe_inline" readonly="1"/>
                                </h1>
                            </div>
                        </group>
                        <separator/>
                        <group>
                            <field name="request_id"  attrs="{'readonly': [('state','not in', ['planeacion'])]}"/> 
                            <field name="io_ids"  widget='many2many_tags'/>
                        </group>
                        <group>
                            <group>
                                <field name="vehicle_id" required="1" attrs="{'readonly': [('request_id','!=', False)]}"/>
                                <field name="movil_nro" required="1" attrs="{'readonly': [('request_id','!=', False)]}"/>
                                <field name="priority" attrs="{'readonly': [('request_id','!=', False)]}"/>
                                <field name="type_mntc" attrs="{'readonly': [('request_id','!=', False)]}"/>
                                <field name="assigned_company_id"/>
                            </group>
                            <group>
                                <field name="garage_id" attrs="{'readonly': [('state','not in', ['planeacion'])]}"/> 
                                <field name="location_id" attrs="{'readonly': [('state','not in', ['planeacion','in_progress'])]}"/>
                                <field name="create_date" attrs="{'readonly': [('state','not in', ['planeacion'])]}"/>
                                <field name="in_charge" attrs="{'readonly': [('state','not in', ['planeacion','in_progress'])]}"/>
                                <field name="odometer" readonly="1"/>
                            </group>
                        </group>
                        <separator/>
                        <group string="Tiempo planeado - ejecutado">
                            <group>
                                <field name="start_programmed_date"/>
                                <field name="end_programmed_date" readonly='1'/>
                                <field name="estimated_time" widget="float_time" readonly='1'/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="spent_time" widget="float_time"  readonly='1'/>
                                <field name="real_time" widget="float_time"  readonly='1'/>
                            </group>
                        </group>
                        <!-- <group>
                            <button type="object" name="mntc_reprogram" string="Reprogramar" attrs="{'invisible':  [('state','not in', ['programmed'])]}"/>
                        </group> -->
                        <group>
                            <group>
                                <field name="approved_date" />
                                <field name="created_by" />
                            </group>
                            <group>
                                <field name="approved_tech_id"/>
                                <field name="ended_by"/>
                            </group>
                        </group>
                        <separator/>
                        <button type="object" name="generate_requisition" string="Generar orden de entrega" attrs="{'invisible':  [('state','not in', ['planeacion','programmed','in_progress'])]}"/>
                        <separator/>
                        <notebook>
                            <page string="Routines">
                                <field name="work_routine_ids" attrs="{'readonly': [('state','not in', ['programmed','in_progress','planeacion'])]}"/> 
                            </page>
                            <page string="Tasks">
                                <button name="mntc_work_routine_ids" type="object" string="Cargar tareas de las rutinas"/>
                                <field name="work_task_ids" attrs="{'readonly': [('state','not in', ['programmed','in_progress','planeacion'])]}" context="{'vehicle_id': vehicle_id}">
                                    <tree>
                                        <field name="routine_id"/> 
                                        <field name="name" string="Activity"/>
                                        <field name="estimated_time" widget="float_time"/>
                                        <field name="repuesto"/> 
                                        <field name="servicio"/> 
                                        <field name="state"  attrs="{'readonly': [('state','not in', ['started'])]}"/>
                                        <field name="spare_part_ids" invisible="1"/>
                                        <field name="workorder_id" invisible="1"/> 
                                        <field name="executed_inspections_ids" invisible="1"/>
                                        <field name="activity_id" invisible="1"/> 
                                        <field name="system_id" invisible="1"/> 
                                        <field name="required_technicians" invisible="1"/> 
                                        <field name="process_description" invisible="1"/> 
                                        <field name="spent_time" widget="float_time" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Resumen de repuestos" >
                                <field name="repuesto_summary">
                                    <tree>
                                        <field name="producto"/> 
                                        <field name="uom_id"/>
                                        <field name="product_uom_qty"/> 
                                        <field name="reserved_availability"/> 
                                        <field name="quantity_done"/>
                                        <field name="qty_available"/>
                                        <field name="task_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Resumen de servicios">
                                <field name="servicio_summary">
                                    <tree>
                                        <field name="producto"/> 
                                        <field name="name"/> 
                                        <field name="product_qty"/>
					                    <field name="price_unit"/>
                                        <field name="taxes_id" widget="many2many_tags"/>
                                        <field name="task_id"/>
                                        <!-- <field name="price_subtotal"/> -->
                                    </tree>
                                </field>
                            </page>
                            <!-- <page string="Programación">
                                <field name="program_lines_ids" attrs="{'readonly': [('state','not in', ['programmed', 'in_progress', 'planeacion'])]}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="technician_id"/>
                                        <field name="duration_number_programmed" widget="float_time"/>
                                        <field name="start_programmed_date"/>
                                        <field name="end_programmed_date"/>
                                        <field name="duration_number_executed"  widget="float_time"/>
                                        <field name="start_executed_date"/>
                                        <field name="end_executed_date"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Stock picking multicompany">
                                <field name="stock_picking_multicompany_ids" attrs="{'readonly': [('state','not in', ['planeacion'])]}"> 
                                    <tree>
                                        <field name="company_name"/>
                                        <field name="name"/>
                                        <field name="stock_picking_id"/>
                                        <field name="placa"/>
                                        <field name="partner_id"/>
                                        <field name="date"/>
                                        <field name="origin"/>
                                        <field name="state"/>
                                        <field name="id_multicompany" invisible='1'/>
                                        <field name="state_help" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Purchase requisition multicompany">
                                <field name="purchase_requisition_multicompany_ids"  attrs="{'readonly': [('state','not in', ['planeacion'])]}">
                                    <tree editable='bottom'>
                                        <field name="company_name"/>
                                        <field name="name"/>
                                        <field name="ordering_date"/>
                                        <field name="user_id"/>
                                        <field name="date_end"/>
                                        <field name="origin"/>
                                        <field name="state"/>
                                        <field name="id_multicompany" invisible='0'/>
                                        <field name="state_help" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Input/Outputs">
                                <field name="io_ids" readonly='1'/>
                            </page> -->
                        </notebook>
                        <separator/>
                        <group>
                            <field name="workorder_cost"/>
                            <field name="workforce_cost_pro"/>
                            <field name="workforce_cost_pro_supplier"/>
                            <field name="observation" attrs="{'readonly': [('state','in', ['ended','canceled'])]}"/>
                            <field name="company_id" invisible="1"/>
                        </group> 
                        <group>
                            <field name="stock_picking_ids" invisible="1"/>
                        </group> 
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="mntc_workorder_search" model="ir.ui.view">
            <field name="name">mntc.workorder.search</field>
            <field name="model">mntc.workorder</field>
            <field name="arch" type="xml">
                <search string="workorder">
                    <field name="number"/>
                    <field name="vehicle_id"/>
                    <field name="priority"/>
                    <field name="request_id"/>
                    <field name="state"/>
                    <field name="type_mntc"/>
                    <field name="movil_nro"/>
                    <field name="in_charge"/>
                    <group expand="0" string="Group By">
                        <filter string="Vehicle" name="vehicle_id" context="{'group_by':'vehicle_id'}"></filter>
                        <filter string="Movil" name="movil_nro" context="{'group_by':'movil_nro'}"></filter>
                        <filter string="Request" name="request_id" context="{'group_by':'request_id'}"></filter>
                        <filter string="Priority" name="priority" context="{'group_by':'priority'}"></filter>
                        <filter string="Garage" name="garage_id" context="{'group_by':'garage_id'}"></filter>
                        <filter string="Location" name="location_id" context="{'group_by':'location_id'}"></filter>
                        <filter string="State" name="state" context="{'group_by':'state'}"></filter>
                        <filter string="Programmed date" name="start_programmed_date" context="{'group_by':'start_programmed_date'}"></filter>
                        <filter string="Start date" name="start_date" context="{'group_by':'start_date'}"></filter>
                        <filter string="End date" name="end_date" context="{'group_by':'end_date'}"></filter>
                        <filter string="In Charge" name="in_charge" context="{'group_by':'in_charge'}"></filter>
                        <filter string="service type" name="service_type_id" context="{'group_by':'service_type_id'}"></filter>
                        <filter string="Type of maintenance" name="type_mntc" context="{'group_by':'type_mntc'}"></filter>
                    </group>
                </search>
            </field>
        </record>

        
        <record id="mntc_workorder_graph" model="ir.ui.view">
            <field name="name">mntc.workorder.graph</field>
            <field name="model">mntc.workorder</field>
            <field name="arch" type="xml">
                <graph string="Graph">
                    <!-- <field name="estimated_time" type="measure" widget="float_time"/>
                    <field name="spent_time" type="measure" widget="float_time"/> -->
                </graph>
            </field>
		</record>

        <record id="mntc_workorder_pivot" model="ir.ui.view">
            <field name="name">mntc.workorder.pivot</field>
            <field name="model">mntc.workorder</field>
            <field name="arch" type="xml">
                <pivot string="Pivot">
                    <!-- <field name="estimated_time" type="measure" widget="float_time"/>
                    <field name="spent_time" type="measure" widget="float_time"/> -->
                </pivot>
            </field>
		</record>

        <record id="mntc_workorder_dashboard" model="ir.ui.view">
            <field name="name">mntc.workorder.dashboard</field>
            <field name="model">mntc.workorder</field>
            <field name="arch" type="xml">
                <dashboard>
                    <view type="pivot" ref="zue_fleet_maintenance.mntc_workorder_pivot"/>
                    <view type="graph" ref="zue_fleet_maintenance.mntc_workorder_graph"/>
                </dashboard>
            </field>
		</record>

        <record  model="ir.ui.view" id="mntc_workorder_calendar">
            <field name="name">mntc.workorder.calendar</field>
            <field name="model">mntc.workorder</field>
            <field name="arch" type="xml">
                <calendar date_start="approved_date">
                    <!-- <field name="workorder_id" />
                    <field name="activity_id"  /> -->
                </calendar>
            </field>
        </record>
    </data>
</odoo>
