<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="workorder_paperformat" model="report.paperformat">
            <field name="name">workorder Format</field>
            <field name="default" eval="True"/>
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">35</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">25</field>
            <field name="dpi">80</field>
        </record>

        <report
                id="workorder_report"
                model="mntc.workorder"
                string="Reporte Orden de Trabajo"
                report_type="qweb-pdf"
                name="zue_fleet_maintenance.workorder_report_document"
                file="zue_fleet_maintenance.workorder_report_document"
                attachment_use="False"
        />

        <record id="zue_fleet_maintenance.workorder_report" model="ir.actions.report">
            <field name="paperformat_id" ref="zue_fleet_maintenance.workorder_paperformat"/>
        </record>

    </data>
</odoo>
