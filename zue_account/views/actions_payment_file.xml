<odoo>
  <data>

    <record id="view_partner_zue_account_payment_form" model="ir.ui.view">
        <field name="name">res.partner.zue.account.payment.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="priority">50</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_account_payable_id']" position="after">					
                <field name="x_property_account_advance_id"/>					              
            </xpath>
        </field>
    </record>

    <!-- Formulario de pagos -->
    <record id="view_zue_account_form_account_payment" model="ir.ui.view">
			<field name="name">zue_account.account_payment_inherit</field>
			<field name="model">account.payment</field>
			<field name="priority">20</field>
			<field name="inherit_id" ref="account.view_account_payment_form"/>
			<field name="arch" type="xml">                
				  <xpath expr="//field[@name='payment_type']" position="after">					
              <field name="x_is_advance"/>					              
          </xpath>
			</field>
		</record>

    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="zue_account.payment_file_list">
      <field name="name">zue_account payment_file_list</field>
      <field name="model">zue.payment.file</field>
      <field name="arch" type="xml">
        <tree>
          <field name="description"/>
          <field name="journal_id"/>
          <field name="application"/>
          <field name="payment_ids" widget="many2many_tags"/>          
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->
    <record model="ir.ui.view" id="zue_account.payment_file_form">
      <field name="name">zue_account payment_file_form</field>
      <field name="model">zue.payment.file</field>
      <field name="arch" type="xml">        
        <form string="Archivo de pago">
          <sheet>
            <group>
              <group>
                <field name="description"/>
                <field name="payment_type"/>
                <field name="type_file" widget="radio"/>
                <field name="format_file" widget="radio" />
                <field name="application"/>
                <field name="sequence"/>
              </group>  
              <group>
                <field name="payment_date"/>
                <field name="journal_id"/>
                <field name="vat_payer"/>
                <field name="account_debit"/>
                <field name="account_type_debit"/>
              </group>  
            </group>
            <group>
                <field name="payment_ids"/>                
            </group>  
            <button name="get_excel" type="object" string="Generar Archivo"/>
          </sheet>
        </form>        
      </field>
    </record>


    <!-- action -->
    <record model="ir.actions.act_window" id="zue_account.action_payment_file">
      <field name="name">Archivo de pago</field>
      <field name="res_model">zue.payment.file</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>