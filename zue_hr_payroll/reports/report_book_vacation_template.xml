<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_book_vacation_document">
        <t t-call="web.html_container">
            <t t-foreach="inside_foreach_docs or docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <strong>LIBRO DE VACACIONES</strong>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <div class="page" style="font-style: normal; font-size: 12px;">
                        <div class="oe_structure">
                            <div class="row">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr style="border:none;">
                                            <th colspan="7" style="border:none;">
                                                <span t-esc="o.employee_id.identification_id"/>
                                                -
                                                <span t-esc="o.employee_id.name"/>
                                            </th>
                                            <th colspan="4" style="border:none;">
                                                Días acumulados de vacaciones
                                                <span t-esc="'{0:,.2f}'.format(o.get_accumulated_vacation_days())"/>
                                            </th>
                                        </tr>
                                        <tr>
                                            <th colspan="2">
                                                Periodo de Causación
                                            </th>
                                            <th colspan="9">
                                                Vacaciones tomadas
                                            </th>
                                        </tr>
                                        <tr style="border: 1px solid black;">
                                            <td style="width: 8%">
                                                <b>Fecha Inicial</b>
                                            </td>
                                            <td style="width: 8%">
                                                <b>Fecha final</b>
                                            </td>
                                            <td style="width: 8%">
                                                <b>Fecha salida</b>
                                            </td>
                                            <td style="width: 8%">
                                                <b>Fecha regreso</b>
                                            </td>
                                            <td style="width: 9%">
                                                <b>Valor IBL</b>
                                            </td>
                                            <td style="width: 7%">
                                                <b>Días Habiles</b>
                                            </td>
                                            <td style="width: 9%">
                                                <b>Valor Días Habiles</b>
                                            </td>
                                            <td style="width: 7%">
                                                <b>Días Festivos</b>
                                            </td>
                                            <td style="width: 9%">
                                                <b>Valor Días Festivos</b>
                                            </td>
                                            <td style="width: 7%">
                                                <b>Días Dinero</b>
                                            </td>
                                            <td style="width: 9%">
                                                <b>Valor Días Dinero</b>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.get_info_book_vacation()" t-as="info">
                                            <td>
                                                <span t-esc="info.initial_accrual_date"/>
                                            </td>
                                            <td>
                                                <span t-esc="info.final_accrual_date"/>
                                            </td>
                                            <td>
                                                <span t-esc="info.departure_date"/>
                                            </td>
                                            <td>
                                                <span t-esc="info.return_date"/>
                                            </td>
                                            <td>
                                                <t t-esc="'$ {0:,.2f}'.format(info.base_value + info.base_value_money)"/>
                                            </td>
                                            <td>
                                                <t t-esc="'{0:,.2f}'.format(info.business_units)"/>
                                            </td>
                                            <td>
                                                <t t-esc="'$ {0:,.2f}'.format(info.value_business_days)"/>
                                            </td>
                                            <td>
                                                <t t-esc="'{0:,.2f}'.format(info.holiday_units)"/>
                                            </td>
                                            <td>
                                                <t t-esc="'$ {0:,.2f}'.format(info.holiday_value)"/>
                                            </td>
                                            <td>
                                                <t t-esc="'{0:,.2f}'.format(info.units_of_money)"/>
                                            </td>
                                            <td>
                                                <t t-esc="'$ {0:,.2f}'.format(info.money_value)"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_book_vacation">
        <t t-foreach="docs" t-as="o">
            <t t-set="inside_foreach_docs" t-value="o"/>
            <t t-call="zue_hr_payroll.report_book_vacation_document"/>
        </t>
    </template>
</odoo>