<odoo>
    <data>
        <record model="ir.actions.act_window" id="hr_history_rtefte_action">
            <field name="name">Histórico de RteFte</field>
            <field name="res_model">hr.employee.rtefte.history</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': True}</field>
        </record>

        <!-- Record rule para filtrar las compañias-->
        <record id="rule_hr_history_rtefte_action" model="ir.rule">
            <field name="name">Permisos compañía Histórico de RteFte</field>
            <field name="model_id" ref="model_hr_employee_rtefte_history"/>
            <field name="domain_force">
                ['|',('z_employee_id.company_id','=',False),('z_employee_id.company_id', 'in', company_ids)]
            </field>
        </record>

        <record model="ir.ui.view" id="hr_employee_rtefte_history_view_tree">
            <field name="name">hr.employee.rtefte.history.tree</field>
            <field name="model">hr.employee.rtefte.history</field>
            <field name="arch" type="xml">
                <tree string="Histórico de RteFte">
                    <field name="z_employee_id"/>
                    <field name="z_payslip_id"/>
                    <field name="z_year"/>
                    <field name="z_month"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_employee_rtefte_history_view_form">
            <field name="name">hr.employee.rtefte.history.form</field>
            <field name="model">hr.employee.rtefte.history</field>
            <field name="arch" type="xml">
                <form string="Histórico de RteFte">
                    <sheet>
                        <group>
                            <group>
                                <field name="z_employee_id" readonly="1"/>
                                <field name="z_payslip_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="z_year" readonly="1"/>
                                <field name="z_month" readonly="1"/>
                            </group>
                        </group>
                        <field name="z_line_ids" readonly="1">
                            <tree string="Reglas deducción tributaria">
                                <field name="z_concept_deduction_id"/>
                                <field name="z_concept_deduction_code"/>
                                <field name="z_concept_deduction_order"/>
                                <field name="z_result_base"/>
                                <field name="z_result_calculation"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>