<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_hr_distribution_rules">
            <field name="name">Reglas de distribución</field>
            <field name="res_model">hr.distribution.rules</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="hr_distribution_rules_list">
            <field name="name">hr distribution rules list</field>
            <field name="model">hr.distribution.rules</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="initial_date" invisible="0"/>
                    <field name="final_date" invisible="0"/>
                    <field name="initial_year"/>
                    <field name="initial_month"/>
                    <field name="final_year"/>
                    <field name="final_month"/>
                    <field name="origin_analytical_account_id"/>
                    <field name="originating_account_id" widget="many2many_tags"/>
                    <field name="distribution_account_id"/>
                    <field name="model_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_distribution_rules_form">
            <field name="name">hr distribution rules form</field>
            <field name="model">hr.distribution.rules</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <h1>
                                <field name="name" placeholder="Nombre"/>
                            </h1>
                        </group>                        
                        <group>
                            <group string="Periodo">
                                <field name="initial_year"/>
                                <field name="initial_month"/>
                                <field name="final_year"/>
                                <field name="final_month"/>
                                <field name="initial_date" invisible="0"/>
                                <field name="final_date" invisible="0"/>
                            </group>
                            <group string="Origen Contable">
                                <field name="origin_analytical_account_id"/>
                                <field name="originating_account_id" widget="many2many_tags"/>
                            </group>
                        </group>
                        <group string="Distribución"> 
                            <field name="distribution_account_id"/>
                            <field name="model_id"/>
                            <field name="analytical_target_account_structure" attrs="{'invisible':[('model_type', '!=', 'D')]}"/>
                            <field name="model_type"/>                            
                            <field name="base"/>
                            <field name="distribution_rules_details" attrs="{'invisible':[('model_type', '!=', 'S')]}">
                                <tree editable="bottom">
                                    <field name="analytical_account_destination_id"/>
                                    <field name="percentage"/>
                                    <field name="value"/>
                                </tree>
                            </field>
                            <field name="operational_filter_type" attrs="{'invisible':[('model_type', '!=', 'D')]}"/>
                            <field name="vehicle_id" attrs="{'invisible':[('operational_filter_type', '!=', '1')]}"/>
                            <field name="branch_id" attrs="{'invisible':[('operational_filter_type', '!=', '2')]}"/>
                            <field name="service_id" attrs="{'invisible':[('operational_filter_type', '!=', '3')]}"/>
                            <field name="contract_id" attrs="{'invisible':[('operational_filter_type', '!=', '4')]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Ejecución reglas de distribución -->

        <record model="ir.actions.act_window" id="action_distribution_rules_execution">
            <field name="name">Ejecución reglas de distribución</field>
            <field name="res_model">distribution.rules.execution</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="hr_distribution_rules_execution_list">
            <field name="name">Distribution rules execution list</field>
            <field name="model">distribution.rules.execution</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="initial_year"/>
                    <field name="initial_month"/>
                    <field name="final_year"/>
                    <field name="final_month"/>
                    <field name="initial_date" invisible="0"/>
                    <field name="final_date" invisible="0"/>
                    <field name="history_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_distribution_rules_execution_form">
            <field name="name">hr distribution rules execution form</field>
            <field name="model">distribution.rules.execution</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="call_up_wizard" type="object" string="Generar contabilidad"/>
                    </header>
                    <sheet>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button name="return_action_to_open"
                                class="oe_inline oe_stat_button" style="width: 200px !important;" 
                                icon="fa-list"
                                attrs="{'invisible': [('counter_contab', '=', 0)]}"
                                type="object">
                                <field name="counter_contab" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <h1>
                                <field name="name" placeholder="Nombre"/>
                            </h1>
                        </group>                        
                        <group string="Periodo">
                            <field name="initial_date" invisible="0"/>
                            <field name="final_date" invisible="0"/>
                            <field name="initial_year"/>
                            <field name="initial_month"/>
                            <field name="final_year"/>
                            <field name="final_month"/>
                            <field name="distribution_rule_id" widget="many2many_tags"/>
                        </group>
                        <group string="Histórico de ejecución"> 
                            <field name="history_id" nolabel="1" options="{'no_create': True}">
                                <tree>
                                    <field name="initial_date"/>
                                    <field name="final_date"/>
                                    <field name="create_date"/>
                                    <field name="applied_rules" widget="many2many_tags"/>
                                    <field name="user_id"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>