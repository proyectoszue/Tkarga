<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_hr_distribution_model">
            <field name="name">Modelo de Distribuci√≥n</field>
            <field name="res_model">hr.distribution.model</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="hr_distribution_model_tree">
            <field name="name">hr distribution model list</field>
            <field name="model">hr.distribution.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="model_type"/>
                    <field name="base"/>                    
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_distribution_model_form">
            <field name="name">hr distribution model form</field>
            <field name="model">hr.distribution.model</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="model_type" widget="radio"/>
                                <field name="base"/>
                            </group>                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>