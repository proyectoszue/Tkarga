<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="zue_erp_reports_accounting.balance_report_html_pdf_action" model="ir.actions.report">
           <field name="name">Balance de prueba</field>
           <field name="model">account.balance.report.filters</field>
           <field name="report_type">qweb-pdf</field>
           <field name="report_name">zue_erp_reports_accounting.balance_report_html_pdf_document</field>
           <field name="report_file">zue_erp_reports_accounting.balance_report_html_pdf_document</field>
           <field name="binding_model_id" ref="model_account_balance_report_filters"/>
        </record>

        <record id="zue_erp_reports_accounting.account_balance_report" model="report.paperformat">
            <field name="name">Balance de prueba</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">280</field>
            <field name="page_width">216</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="zue_erp_reports_accounting.balance_report_html_pdf_action" model="ir.actions.report">
            <field name="paperformat_id" ref="zue_erp_reports_accounting.account_balance_report"/>
        </record>
</odoo>