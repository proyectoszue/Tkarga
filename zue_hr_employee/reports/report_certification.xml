<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="labor_certification" model="report.paperformat">
            <field name="name">Amtur</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">60</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report
            id="report_certificacion_laboral_action"
            model="hr.contract"
            string="Certificacion laboral"
            report_type="qweb-pdf"
            name="zue_hr_employee.report_certificacion_laboral"
            file="zue_hr_employee.report_certificacion_laboral"
        />
        <record id="report_certificacion_laboral_action" model="ir.actions.report">
            <field name="paperformat_id" ref="zue_hr_employee.labor_certification" />
        </record>
</odoo>